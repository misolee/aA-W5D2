<h1>New Post</h1>

<form action="<%= sub_posts_url(@post.sub_id) %>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <label>
    Title
    <input type="text" name="post[title]" value="">
  </label>
  <br><br>
  <label>
    URL
    <input type="text" name="post[url]" value="">
  </label>
  <br><br>
  <label>
    Content
    <input type="text" name="post[content]" value="">
  </label>
  <br><br>
  <input type="submit" value="Create New Post">
</form>
<br><br>
<form action="<%= sub_url(@post.sub_id) %>" method="get">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="submit" value="Go back to the sub">
</form>